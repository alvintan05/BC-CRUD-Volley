<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_text_nim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nim" />

        <TextView
            android:id="@+id/tv_nim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_text_nim"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/tv_text_nim"
            android:layout_toRightOf="@+id/tv_text_nim"
            tools:text="4617010024" />

        <TextView
            android:id="@+id/tv_text_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_text_nim"
            android:layout_marginTop="5dp"
            android:text="@string/nama" />

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_text_nama"
            android:layout_alignStart="@+id/tv_nim"
            android:layout_alignLeft="@+id/tv_nim"
            android:layout_toEndOf="@+id/tv_text_nama"
            android:layout_toRightOf="@+id/tv_text_nama"
            tools:text="Alvin Tandiardi" />


    </RelativeLayout>

</android.support.v7.widget.CardView>

